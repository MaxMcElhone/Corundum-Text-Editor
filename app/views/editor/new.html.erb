<h1 class="jumbotron" align="center">
  Add File
</h1>
<div class="container">
  <%= form_for :document, path: "editor" do |f| %>
    <% if @document.errors.any? %>
      <% @document.errors.full_messages.each do |m| %>
        <div class="alert alert-danger">
          <%= m %>
        </div>
      <% end %>
    <% end %>
    <h3>
      <%= f.label :title %><br />
    </h3>
    <h4>
      <%= f.text_field :title, class: "form-control" %>
    </h4>
    <h4>
      <%= f.label :body %><br />
    </h4>
    <p>
      <%= f.text_area :body, class: 'form-control' %>
    </p>
    <p>
      <%= f.submit class: 'btn btn-success' %>

      <%# I don't know it this is useful but I found it and it's here if needed %>
      <% end %>
    </p>
    <%= form_tag(:controller => :editor, :action => :fileUpload, :method => :put, remote: true, multipart: true)  do  %>
      <%= label 'Upload your file.', :uploaded_file %>
      <%= file_field :uploaded_file, class: "btn btn-secondary" %>
      <%= submit_tag "Upload", class: 'btn btn-info' %>
    <% end %>
</div>
