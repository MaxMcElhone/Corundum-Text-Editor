<h1 class="jumbotron w-100" align="center">
	All Documents
</h1>
<div class="container">
	<% @documents.each do |d| %>
		<div class="card bg-dark text-white">
			<div class="card-body">
				<h3>
					<%= d.title %>
				</h3>
				<h6>
					<%= d.body %>
				</h6>
				<!-- grey or blue I can't decide: grey:secondary blue:Info-->
				<%= link_to "View", editor_path(d.id), :class => 'btn btn-info' %>
			</div>
		</div>
		<br>
	<% end %>
	<%= form_tag(:controller => :editor, :action => :fileupload, :multipart => true)  do  %>
		<%= file_field( :post, :attached, accept: 'text/html', class: "btn btn-secondary") %>
		<%= submit_tag "Upload", class: 'btn btn-info' %>
	<% end %>
</div>

