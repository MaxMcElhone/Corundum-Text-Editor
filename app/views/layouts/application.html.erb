<!DOCTYPE html>
<html>
  <head>
    <title>CorundumTextEditor</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('clogo.png'), :rel => 'icon', :type =>  'image/png' %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to image_tag("clogo.png", :alt => "Corundum", class: "navbar-brand", height: "30"), home_path %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item <%= active_class(home_path) %>">
            <%= link_to "Home", home_path, {:class=>"nav-link"} %>
          </li>
          <li class="nav-item <%= active_class(new_editor_path) %>">
            <%= link_to "New", new_editor_path, {:class=>"nav-link"} %>
          </li>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
